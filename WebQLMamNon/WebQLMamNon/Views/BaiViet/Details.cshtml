@model WebQLMamNon.Models.Tbl_BaiViet

@{
    ViewBag.Title = "Chi Tiết";
    Layout = "~/Views/LayoutUser.cshtml";
}

<h1>Chi Tiết</h1>
<hr />
<br />
<div>
    <div class="col-md-12" style="border:groove; border-radius:1px ; border-color: #e4e966 ; height:auto;padding:20px 15px 20px 15px">
        <div>
            <h2 id="tieude" style="color:#ff6a00">
                @Html.DisplayFor(model => model.tenBaiViet)
            </h2>
        </div>
        <br />
        <br />
        <div>
            <img style="width: 600px;height: 400px;float:initial" src="~/Images/@Html.DisplayFor(model=>model.hinhBV)" />
        </div>
        <div>
            <h2 style="color:###f13737;font-size: 20px">Nội dung: </h2>
            <p style="font-family:Arial;font-size:16px">@Html.DisplayFor(model => model.noiDung) </p>

        </div>
        <br />
        <div>
            <b>Ngay xuat ban: </b>
            @Html.DisplayFor(model => model.ngayDang)
        </div>
        <div id="link">@Html.ActionLink("Go Back", null, null, null, new { href = Request.UrlReferrer })</div>
        <br />
    </div>
</div>

