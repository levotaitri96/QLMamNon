@model IEnumerable<WebQLMamNon.Models.Tbl_PhanCong>
@{
    ViewBag.Title = "LichSuPhanCong";
    Layout = "~/Views/LayoutAdmin.cshtml";
}

<h2>LichSuPhanCong</h2>

@using (Html.BeginForm("LichSuPhanCong", "PhanCong", FormMethod.Get))
{
    <div class="form-group" style="width:90%">
        @Html.DropDownList("maNamHoc", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maNamHoc" })
        @Html.DropDownList("maLoai", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maLoai" })
    </div>

    <input style="padding-top:5px" type="submit" value="Tìm Kiếm" />
}
<table class="table">
    <tr>
        <th>
            Tên Giáo Viên
        </th>
        <th>
            Tên Lớp
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_GiaoVien.hoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_LopHoc.tenLop)
            </td>
        </tr>
    }

</table>