@model IEnumerable<WebQLMamNon.Models.Tbl_PhanLop>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayoutAdmin.cshtml";
}
@{
    using (Html.BeginForm("LenLop", "HSLenLop", FormMethod.Post))
    {
        <h2>Lên Lớp Học Sinh</h2>
        <div class="row">
            <div class="col-md-12">
                <div>
                    @Html.DropDownList("maLop", new SelectList(ViewBag.maLops, "maLop", "tenLop"), "--Tất cả--", htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maLop" })
                    @Html.Hidden("loai", this.Request.RawUrl)
                </div><br /><br />
                <div class="list-group">
                    <table class="table" style="font-size-adjust:unset">
                        <tr style="background:orange">
                            @foreach (var item in Model)
                            {

                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.maLop)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.maNamHoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tbl_LopHoc.tenLop)

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Tbl_HocSinh.hoTen)
                                </td>



                            </tr>


                            }
                        </table>
                    </div>
                </div>


            </div>

            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @*@Html.DropDownList("maLop", new SelectList(ViewBag.maLops, "maLop", "tenLop"), "--Tất cả--", htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px",@value="maLop" })*@

                <input type="submit" value="Lên Lớp" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
    }

}

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script>
    @*$(function () {
        if (@ViewBag.selectedId!="") {
            $('#maLop option:eq(' + @ViewBag.selectedId +')').prop('selected', true)
        }*@
        $("#maLop").on("change", function () {
            $("tr").has("td").hide();
            $("td:contains('" + $("#maLop").val() + "')").parent().show();
        })

</script>