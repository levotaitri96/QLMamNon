@model IEnumerable<WebQLMamNon.Models.Tbl_DiemDanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayoutAdmin.cshtml";
}

<h1 style="margin-left:20px">Bảng Điểm Danh</h1>
@if (TempData["dd"] != null)
{
    <script>
        alert("Ngày Điểm Danh Hôm Nay Đã Tạo");
    </script>
}
@if (TempData["tb"] != null)
{
    <script>
        alert("Chọn ngày,tháng,năm tạo điểm danh");
    </script>
}
@using (Html.BeginForm("DiemDanhNgay", "DiemDanhGV", FormMethod.Get))
{
    <input class="btn btn-primary" style="float:left;margin-left:20px" type="submit" value="Tạo mới bảng điểm danh" />
    <input type="date" name="ngaydiemdanh" />

        }

        @using (Html.BeginForm("LichSuDiemDanh", "DiemDanhGV", FormMethod.Get))
        {
            <div class="form-group" style="width:90%">
                @Html.DropDownList("maNamHoc", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 20px;margin-left:20px", @value = "maNamHoc" })
                @Html.DropDownList("maThang", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maThang" })
            </div>

            <input style="padding-top:5px" type="submit" value="Tìm Kiếm" />
        }
        <table class="table">
            <tr style="background:orange;font-size:15px">
                <th>
                    Ngày điểm danh
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ngayDiemDanh-@item.maThang-@item.maNamHoc
                    </td>

                    <td>
                        @using (Html.BeginForm("DiemDanh", "DiemDanhGV", new { id = item.maDiemDanh }, FormMethod.Get))
                        {
                            <input class="btn btn-danger" style="font-size:12px" type="submit" value="Chi tiết điểm danh" />
                        }
                    </td>
                </tr>
            }

        </table>
