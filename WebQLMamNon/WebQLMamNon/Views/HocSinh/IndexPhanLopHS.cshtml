@model IEnumerable<WebQLMamNon.Models.Tbl_PhanLop>

@{
    ViewBag.Title = "PhanLopHS";
    Layout = "~/Views/LayoutAdmin.cshtml";
}
@if (TempData["loipc"] != null)
{
    <script>
        alert("Mỗi học sinh chỉ được thuộc 1 lớp trong 1 năm học");
    </script>
}
@if (TempData["loi"] != null)
{
    <script>
        alert("Mỗi lớp tối đa 20 học sinh ");
    </script>
}
<h2>Phân Lớp Học Sinh</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>

@using (Html.BeginForm("PhanLopHS", "HocSinh", FormMethod.Get))
{
    <div class="form-group" style="float:left;width:90%">
        @Html.DropDownList("maLop", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maLop" })
        @Html.DropDownList("maHS", null, htmlAttributes: new { @class = "form-control", @style = "width:25%; margin-right: 10px", @value = "maHS" })
    </div>

    <input style="float:left" type="submit" value="Phân Lớp" />
}
<table class="table">
    <tr>
        <th>
            Tên Lớp
        </th>
        <th>
            Họ Tên
        </th>
        <th>
            Ngày Sinh
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tbl_LopHoc.tenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_HocSinh.hoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_HocSinh.ngaySinh)
            </td>
            <td></td>
            <td>

                <a href="@Url.Action("LoadHS", "HocSinh",new { id = item.maHS })"><i class="fa fa-book"></i>&nbsp;&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;
                <a href="#" id="del" onclick="return confirm('Bạn chắc muốn xóa')"><i class="fa fa-trash"></i>&nbsp;&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;
            </td>
        </tr>
    }

</table>

