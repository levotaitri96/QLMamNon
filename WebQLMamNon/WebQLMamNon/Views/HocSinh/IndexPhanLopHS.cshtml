@model IEnumerable<WebQLMamNon.Models.Tbl_PhanLop>

@{
    ViewBag.Title = "PhanLopHS";
    Layout = "~/Views/LayoutAdmin.cshtml";
}

<h2>Phân Lớp Học Sinh</h2>


@using (Html.BeginForm("LoadLopTheoLoai", "HocSinh", FormMethod.Get))
{
    <div class="form-group" style="float:left;width:90%">
        @Html.DropDownList("maNH", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maNamHoc" })
        @Html.DropDownList("maLoai", null, htmlAttributes: new { @class = "form-control", @style = "width:20%; float: left ;margin-right: 10px", @value = "maLoai" })
        @*@Html.DropDownList("maHS", null, htmlAttributes: new { @class = "form-control", @style = "width:25%; margin-right: 10px", @value = "maHS" })*@
    </div>

    <input style="float:left" type="submit" value="Xem theo lớp" />
}
<table class="table">
    <tr>
        <th>
            Năm Học
        </th>
        <th>
            Tên Lớp
        </th>
        <th>
            Tên Học Sinh
        </th>
        
       
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tbl_NamHoc.tenNamHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_LopHoc.tenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tbl_HocSinh.hoTen)
            </td>
           
            <td></td>
            <td>
                <a href="@Url.Action("PhanLopHS", "HocSinh",new { @maLop = item.maLop, @maNH=item.maNamHoc, @maLoai=item.maLoai })"><i class="fa fa-book"></i>&nbsp;&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;
                @*<a href="@Url.Action("LoadHS", "HocSinh",new { id = item.maHS })"><i class="fa fa-book"></i>&nbsp;&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;
                <a href="#" id="del" onclick="return confirm('Bạn chắc muốn xóa')"><i class="fa fa-trash"></i>&nbsp;&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;*@
            </td>
        </tr>
    }

</table>

